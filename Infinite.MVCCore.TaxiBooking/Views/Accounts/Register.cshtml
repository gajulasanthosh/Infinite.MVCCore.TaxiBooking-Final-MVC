@model RolesRegisterVM

@{
    ViewData["Title"] = "Register";
}

<style>
        .reg {
                background-image: Url('https://img.freepik.com/free-vector/blank-rectangle-colorful-abstract-frame_53876-118328.jpg?size=626&ext=jpg&ga=GA1.1.1521445110.1675273635');
                background-repeat:no-repeat;
                background-size: cover;

    }
</style>
<body class="reg text-white">
    <div class=" offset-4 w-100 pt-5">
        <h1 class="mt-3">Register</h1>

        <form asp-controller="Accounts" asp-action="Register" method="post" class="form-group">
            <div class="row">
                <div class="col-md-4">

                    <label asp-for="@Model.RegisterRoles.LoginID" class="form-label "></label>
                    <input type="text" asp-for="@Model.RegisterRoles.LoginID" class="form-control" placeholder="Enter the UserName" />
                    <span asp-validation-for="@Model.RegisterRoles.LoginID" class="text-danger"></span>
                </div>
                <div class="row">
                    <div class="col-md-4">
                        <label asp-for="@Model.RegisterRoles.Password" class="form-label"></label>
                        <input type="password" asp-for="@Model.RegisterRoles.Password" class="form-control" placeholder="Enter your Full Name" />
                        <span asp-validation-for="@Model.RegisterRoles.Password" class="text-danger"></span>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-4">
                        <label asp-for="@Model.RegisterRoles.ConfirmPassword" class="form-label"></label>
                        <input type="password" asp-for="@Model.RegisterRoles.ConfirmPassword" class="form-control" placeholder="Enter your Email" />
                        <span asp-validation-for="@Model.RegisterRoles.ConfirmPassword" class="text-danger"></span>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-4">
                        <label asp-for="SelectedValue" class="form-group">Select Role</label>
                        <select name="selectedValue" asp-for="SelectedValue" asp-items="Model.Values" class="form-select"></select>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-4 mt-4">
                    <button type="submit" class="btn btn-success" style="width: 100%;">
                        Register
                    </button>
                    <div class="row">
                        <div class="mt-2">
                            <a asp-action="login" asp-controller="Accounts" class=" link link-primary text-white">Already have an account? Login here</a>
                        </div>
                    </div>
                </div>
            </div>
        </form>
        </div></body>

